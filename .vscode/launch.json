{
  "version": "0.2.0",
  "configurations": [
    
    {
      // Debug ALL tests (headed, with PW inspector)
      "name": "PW: Debug all tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "--headed"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "PWDEBUG": "1" }
    },
    {
      // Debug just the CURRENT file in the editor
      "name": "PW: Debug current file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "${relativeFile}", "--headed"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "PWDEBUG": "1" }
    },
    {
      // (Optional) Debug current file in Chromium with slow motion
      "name": "PW: Debug current file (Chromium + slowmo)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "${relativeFile}", "--project=chromium", "--headed", "--timeout=0"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "PWDEBUG": "1", "PLAYWRIGHT_SLOW_MO": "300" }
    }
  ]
}
